	.slider {
		width: 100%;
		min-width: 1008px;
		height: 100%;
		position: relative;
		//overflow: auto;
		.btns {
			width: 426px;
			display: inline-block;
			.btn-to-store {
				float: left;
				span {
					width: 188px;
					height: 55px;
					background: url(/gismeteo/ios-promo/images/btn-to-store.png) no-repeat;
					display: inline-block;
				}
				.descr {
					width: 188px;
					height: auto;
					color: #999;
					background: none;
					display: block;	
				}
			}
			.btn-soc {
				float: right;
				span {
					width: 28px;
					height: 28px;
					margin-right: 10px;
					display: inline-block;
					&.b {
						background: url(/gismeteo/ios-promo/images/btn-soc.png) no-repeat;		
					}
					&.f {
						background: url(/gismeteo/ios-promo/images/btn-soc.png) -29px 0 no-repeat;		
					}
					&.t {
						background: url(/gismeteo/ios-promo/images/btn-soc.png) -58px 0 no-repeat;		
					}
					&.ok {
						background: url(/gismeteo/ios-promo/images/btn-soc.png) -87px 0 no-repeat;		
					}															
					&.last {
						margin-right: 0;
					}	
				}
				.descr {
					width: 100%;
					height: auto;
					font: 14px/18px HelveticaNeueMedium, Arial, Helvetica, Sans-serif;
					color: #000;
					background: none;
					display: block;	
				}				
			}			
		}
		.slide {
			width: 100%;
			height: 100%;
			position: relative;
			overflow: hidden;
			clear:both;
			//border-bottom: 1px solid #ff0000;
			.slide-wrapper {
				width: 1008px;
				height: 100%;	
				margin: 0 auto;
				.slide-content {
					width: 1008px;
					height: 100%;
					position: relative;
				}				
			}			
			.content {
				width: 595px;
				top: 50%;
				margin-top: -270px;
				right: 0;
				margin-right: @margin_left_right;
				text-align: center;
				position: absolute;
				.logo img {
					width: 216px;
					height: 60px;
				}
				p {
					margin: 0;
					margin-top: 42px;
					margin-bottom: 122px;
					font: 40px/48px HelveticaNeueLight, Arial, Helvetica, Sans-serif;	
				}
			}			
			&.slide-0 {
				background: #f0eff4;
				z-index: 998;
			}
			&.slide-1 {
				background: #f0eff4;
				z-index: 996;
				.content {
					width: 520px;
					padding-left: 75px;
					text-align: left;
					p {
						margin: 106px 0 44px 0;
					}
					span {
						font: 18px/24px HelveticaNeueLight, Arial, Helvetica, Sans-serif;	
					}					
				}
			}
			&.slide-2 {
				background: #f0eff4;
				.map {
					width: 1999px;
					height: 1024px;
					top: 50%;
					left: 50%;
					margin-top: -512px;
					margin-left: -1000px;
					background: url(/gismeteo/ios-promo/images/slide-2.jpg) no-repeat;
					position: absolute;	
					z-index: 997;					
				}
				.favorite {
					width: 1169px;
					height: 551px;
					background: url(/gismeteo/ios-promo/images/favorite.png) no-repeat;
					top: -50%;
					left: 50%;
					margin-top: -303px;
					margin-left: -649px;					
					position: absolute;
					//display: none;
					z-index: 999;
				}	
				.favorite-shadow {
					width: 1169px;
					height: 551px;
					background: url(/gismeteo/ios-promo/images/favorite-shadow.png) no-repeat;
					top: 50%;
					left: 50%;
					margin-top: -303px;
					margin-left: -649px;					
					position: absolute;
					opacity: 0;
					z-index: 998;				
				}			
				.content {
					width: 520px;
					padding-left: 75px;
					text-align: left;
					p {
						margin: 106px 0 44px 0;
					}
					span {
						font: 18px/24px HelveticaNeueLight, Arial, Helvetica, Sans-serif;
					}					
				}
				.iphone {
					width: 342px;
					height: 720px;
					top: 50%;
					//left: 50%;
					margin-top: -372px;
					margin-left: 8px;
					//margin-left: -454px;		
					background: url(/gismeteo/ios-promo/images/iphone.png) no-repeat;	
					position: fixed;	
					z-index: 999;
					.iphone-content {
						width: 299px;
						height: 531px;
						top: 50%;
						margin-top: -271px;
						margin-left: 24px;
						z-index: 998;
						position: absolute;
						&.iphone-content-0 {
							background: url(/gismeteo/ios-promo/images/iphone-content-0.jpg) no-repeat;
						}	
						&.iphone-content-1 {
							background: url(/gismeteo/ios-promo/images/iphone-content-1.jpg) no-repeat;
							z-index: 997;
							opacity: 0;
						}	
						&.iphone-content-2 {
							background: url(/gismeteo/ios-promo/images/iphone-content-2.jpg) no-repeat;
							z-index: 996;
							opacity: 0;
						}
					}
				}
				.gistogramma {
					width: 0px;
					height: 49px;
					background: url(/gismeteo/ios-promo/images/gistogramma.png) no-repeat;
					top: 50%;
					margin-top: 114px;
					margin-left: -496px;
					position: fixed;
					z-index: 996;
				}
			}

			&.slide-3 {
				z-index: 997;	
				&.with-background-slide3  {
					width: 100%;
					height: 100%;
					//background: url(/gismeteo/ios-promo/images/slide-3.png);
					//background-size: cover;
					background: #1b89ce; /* Old browsers */
					/* IE9 SVG, needs conditional override of 'filter' to 'none' */
					background: url(data:image/svg+xml;base64,);
					background: -moz-linear-gradient(top,  #1b89ce 0%, #24a6f7 100%); /* FF3.6+ */
					background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1b89ce), color-stop(100%,#24a6f7)); /* Chrome,Safari4+ */
					background: -webkit-linear-gradient(top,  #1b89ce 0%,#24a6f7 100%); /* Chrome10+,Safari5.1+ */
					background: -o-linear-gradient(top,  #1b89ce 0%,#24a6f7 100%); /* Opera 11.10+ */
					background: -ms-linear-gradient(top,  #1b89ce 0%,#24a6f7 100%); /* IE10+ */
					background: linear-gradient(to bottom,  #1b89ce 0%,#24a6f7 100%); /* W3C */
					filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1b89ce', endColorstr='#24a6f7',GradientType=0 ); /* IE6-8 */					
				}		
				.slide-content {				
					text-align: center;
				}
				.content {
					width: 1008px;
					right: auto;
					top: 50%;
					margin-top: -200px;
					text-align: center;
					color: #fff;
					p {
						margin: 106px 0 44px 0;
					}
					span {
						font: 18px/24px HelveticaNeueLight, Arial, Helvetica, Sans-serif;
					}			
				}
				.clouds-glare {
					opacity: 1;
				}
				.arc {
					//width: 2000px;
					//height: 331px;
					//background: url(/gismeteo/ios-promo/images/arc.png) no-repeat;
					position: absolute;
					top: 50%;
					left: 50%;
					//margin-left: -1000px;
					//margin-top: -260px;
					#arc {
						opacity: 1;
						position: relative;
						z-index: 998;
						//border: 1px solid #fff;
					}
					.sun {
						width: 55px;
						height: 56px;
						background: url(/gismeteo/ios-promo/images/sun.png) no-repeat;
						position: absolute;
						z-index: 999;
						margin-top: -39px;
						display: none;
					}
				}					
			}
			&.slide-4 {
				.content {
					color: #fff;
					p {
						margin: 106px 0 44px 0;
					}
					span {
						font: 18px/24px HelveticaNeueLight, Arial, Helvetica, Sans-serif;		
					}
					.iphone_ {
						&:before {
							width: 342px;
							height: 720px;
							content: url(/gismeteo/ios-promo/images/iphone-slide-4.png);
							margin-left: -696px;
							margin-top: -102px;
							position: absolute;
							z-index: 999;		 			
				 		}
				 	}					
				}
				.footer {
					width: 100%;
					height: 195px;
					background: #f0eff4;
					bottom: 0;
					position: absolute;
					.btns-wrapper {
						width: 1008px;
						height: 100%;
						margin: 0 auto;
						position: relative;
						z-index: 1000;
						.btns {
							right: 74px;
							position: absolute;
							.btn-to-store {
								margin-top: 20px;
								text-align: center;
								.descr {
									font: 13px/18px HelveticaNeueLight, Arial, Helvetica, Sans-serif;
								}													
							}					
							.btn-soc {
								margin-top: 20px;
								span {
									&.b {
										background: url(/gismeteo/ios-promo/images/btn-soc.png) -116px 0 no-repeat;		
									}
									&.f {
										background: url(/gismeteo/ios-promo/images/btn-soc.png) -145px 0 no-repeat;		
									}
									&.t {
										background: url(/gismeteo/ios-promo/images/btn-soc.png) -174px 0 no-repeat;		
									}
									&.ok {
										background: url(/gismeteo/ios-promo/images/btn-soc.png) -203px 0 no-repeat;		
									}
								}					
							}
							.descr {
								font: 14px/18px HelveticaNeueMedium, Arial, Helvetica, Sans-serif;
							}							
						}							
					}								
				}
			}
			.arrow {
				a {
					width: 71px;
					height: 35px;
					display: inline-block;
			  	-webkit-transition: margin-top 0.1s ease-out 0.1s;
	     		-moz-transition: margin-top  0.1s ease-out 0.1s;
	     		-o-transition: margin-top  0.1s ease-out 0.1s;
	     		transition: margin-top 0.1s ease-out 0.1s;
					&:hover {
						margin-top: 5px;		
					}				
				}
				span {
					width: 71px;
					height: 37px;
					margin-top: 92px;
					background: url(/gismeteo/ios-promo/images/arrow.png) no-repeat;
					display: inline-block;     							
				}
			}								
		}
	}
}

.clear {
	clear: both;
